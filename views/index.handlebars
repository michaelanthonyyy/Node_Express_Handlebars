<div class="jumbotron jumbotron-fluid">
  <div class="container">
  <h1>Eat-Da-Burger!</h1>
  <div class="burgerImage"><img src="/assets/images/burger.jpg"></div>
</div>
</div>

<div class="container-fluid">
  <div class="row justify-content-center">

    <div class="col-sm">
      <h3>Burgers Left To Devour</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block munch=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm">
      <h3>Add a Burger</h3>
      <form class="create-form">
        <div class="form-group">
          <label for="newBurger">Burger Name:</label>
          <input type="text" id="newBurger" name="burger_name">
        </div>
        <div class="form-group">
          <label for="devoured">Place An Order</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured<br>
          <input type="radio" name="devoured" value="0"> Let's Place An Order
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>

    <div class="col-sm">
      <h3>Burgers That You've Devoured</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block munch=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>